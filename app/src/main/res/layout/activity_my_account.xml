<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101211">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_avtar"
        android:id="@+id/iv_image"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/tv_name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@string/regular"
        android:textFontWeight="600"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:id="@+id/tv_email"
        android:textColor="#9C9A9A"
        android:textSize="14sp"
        android:fontFamily="@string/regular"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Verified"
        android:id="@+id/verified"
        android:textColor="#9C9A9A"
        android:textSize="14sp"
        android:fontFamily="@string/regular"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"/>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/verifyIcon"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/verified"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/notVerified"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/not_verified"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account And Security"
        android:textAllCaps="true"
        android:textColor="#9C9A9A"
        android:textSize="14sp"
        android:fontFamily="@string/regular"
        android:layout_gravity="start"
        android:paddingStart="20dp"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/profileFg"
            android:background="#1b1f20"
            android:elevation="3dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="2dp"
            android:backgroundTint="#1b1f20">

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Forgot Password ?"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@string/light"
                android:paddingStart="15dp"
                android:layout_gravity="center_vertical"/>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingStart="20dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            app:cardCornerRadius="2dp"
            android:id="@+id/bt_logout"
            android:elevation="3dp"
            app:cardElevation="4dp"
            android:backgroundTint="#1b1f20">

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@string/light"
                android:paddingStart="15dp"
                android:layout_gravity="center_vertical"/>




        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingStart="20dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            app:cardCornerRadius="2dp"
            android:id="@+id/verifyEmail"
            android:elevation="3dp"
            app:cardElevation="4dp"
            android:backgroundTint="#1b1f20">

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Verify Email"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@string/light"
                android:paddingStart="15dp"
                android:layout_gravity="center_vertical"/>




        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingStart="20dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            app:cardCornerRadius="2dp"
            android:id="@+id/snackbar_clear_cache"
            android:elevation="3dp"
            app:cardElevation="4dp"
            android:backgroundTint="#1b1f20">

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Clear Cache"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@string/light"
                android:paddingStart="15dp"
                android:layout_gravity="center_vertical"/>




        </androidx.cardview.widget.CardView>


    </LinearLayout>



</LinearLayout>

